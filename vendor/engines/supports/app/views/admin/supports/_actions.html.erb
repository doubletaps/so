<ul>
  <% if Admin::SupportsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_supports_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_support_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::SupportsController.sortable? and Support.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Supports"),
                 admin_supports_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Supports"),
                 admin_supports_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>